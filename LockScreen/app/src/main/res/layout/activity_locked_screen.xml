<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    android:tag="img"
    android:id="@+id/layout"
    tools:context="com.jayant.www.lockscreen.MainActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <TextClock
        android:id="@+id/textClock2"
        android:layout_width="176dp"
        android:layout_height="80dp"
        android:text="@string/_12_12"
        android:textAlignment="viewEnd"
        android:textSize="70sp"
        android:layout_marginEnd="59dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/bar"
        android:layout_marginTop="71dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date"
        android:layout_width="150dp"
        android:layout_height="32dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:textAlignment="viewEnd"
        app:layout_constraintRight_toRightOf="@+id/textClock2"
        app:layout_constraintTop_toBottomOf="@+id/textClock2"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/bar"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:contentDescription=""
        android:src="@drawable/bar"
        android:visibility="visible"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/date"
        android:layout_marginEnd="85dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="@+id/textClock2" />

    <ImageView
        android:id="@+id/ampm"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:contentDescription=""
        app:srcCompat="@android:drawable/screen_background_light_transparent"
        tools:ignore="ContentDescription,RtlHardcoded"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/bar"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/bar"
        app:layout_constraintLeft_toRightOf="@+id/bar" />

    <TextView
        android:id="@+id/test"
        android:layout_width="43dp"
        android:layout_height="31dp"
        android:textAlignment="viewEnd"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/date"
        app:layout_constraintRight_toRightOf="@+id/bar"
        app:layout_constraintTop_toBottomOf="@+id/textClock2"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_editor_absoluteY="152dp"
        tools:layout_editor_absoluteX="256dp"
        android:layout_marginRight="0dp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bnUnlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="419dp" />

</android.support.constraint.ConstraintLayout>
